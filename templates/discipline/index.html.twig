{% extends "base/base.html.twig" %}

{% block title %}{{ discipline.name }} | UDL.no{% endblock %}
{% block hero_text %}{{ discipline.name }}{% endblock %}
{% block subtext %}{{ discipline.description | nl2br }}{% endblock %}
{% block back_url %}{{ path('home') }}{% endblock %}
{% block back_title %}<span class="fas fa-arrow-left"></span> Tilbake til forsiden{% endblock %}
{% block back_label %}Gå tilbake til hovedsiden.{% endblock %}
{% block meta_description %}{{ discipline.description }}{% endblock %}

{% block content %}
    <div class="row offset-xl-1 col-xl-10">
        {% for chunk in playlists %}
            <div class="col-lg-4 card">
                {% for playlist in chunk %}
                    <a href="{{ path('playlist', {
                        discipline_slug: discipline.url_slug,
                        playlist_slug: playlist.url_slug
                    }) }}"
                       aria-label="Gå til spilleliste: {{ playlist.name }}">
                        <h5 class="card-header">{{ playlist.name }}</h5>
                    </a>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
{% endblock %}
