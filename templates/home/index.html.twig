{% extends "base/base.html.twig" %}

{% block content %}
    <div class="jumbotron">
        <div class="row">
            <div class="col-md-3"><img src="{{ asset('img/udl_logo.png') }}" alt="UDL.no" width="75%" height="90%"></div>
            <div class="col-md-6 page-header"><h1>UDL - Gratis mattevideoer og leksehjelp</h1></div>
        </div>
    </div>

    <div class="container">
        <div class="row">
            {% for discipline in disciplines %}
                <div class="col-md-4">
                    <h2>{{ discipline.getName }}</h2>
                    <p>{{ discipline.getShortDescription | raw }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('css/home.css') }}" rel="stylesheet"/>
{% endblock %}
